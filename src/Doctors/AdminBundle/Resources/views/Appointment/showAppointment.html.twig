{% block body %}
    <!-- /main header -->

    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title arabe">المعلومات التي تخص الموعد "<strong>{{ appointment.status }} للمستخدم {{ appointment.user.name }} و الطبيب {{ appointment.doctor.nameDoctor }}</strong>"</h4>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">


                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">
                            <h4 class="panel-title arabe">عرض المعلومات</h4>
                        </div>


                        <div class="panel-body">
                            <div class="table-responsive">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong>تاريخ الموعد </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">يوم
                                                {{ appointment.appointment|date('Y-m-d') }} على الساعة {{ appointment.appointment|date('H') }} و {{ appointment.appointment|date('i') }} دقيقة
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong>حالة الموعد </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">
                                                {{ appointment.status }}
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2">
                                                <strong class="arabe">اسم الطبيب </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">
                                                {{ appointment.doctor.nameDoctor }}
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong>رقم تواصل الطبيب  </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">
                                                {{ appointment.doctor.phoneNumberDoctor }}
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong class="arabe"> صورة الطبيب</strong>
                                            </div>
                                            <div class="col-lg-10">
                                                <div class="row">


                                                    <div class="col-lg-3">
                                                        <a href="#" id="show-{{ appointment.doctor.id }}" data-toggle="modal"
                                                           data-target="#show-modal-{{ appointment.doctor.id }}">

                                                            <img src="{{ asset('uploads/doctors/'~appointment.doctor.photoDoctor) }}"
                                                                 width="180" height="150" id="small-img-{{ appointment.doctor.id }}" class="thumbnail">

                                                        </a>

                                                    </div>


                                                    <div class="modal fade" id="show-modal-{{ appointment.doctor.id }}" tabindex="-1"
                                                         role="dialog" aria-labelledby="myModalLabel"
                                                         aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">

                                                                <div class="modal-header">
                                                                    <button type="button" class="close"
                                                                            data-dismiss="modal" aria-hidden="true">
                                                                        &times;
                                                                    </button>
                                                                    <h4 class="modal-title arabe" id="myModalLabel"> اظهار
                                                                        الصورة</h4>
                                                                </div>

                                                                <div class="modal-body">
                                                                    <center>
                                                                        <img src="{{ asset('uploads/doctors/'~appointment.doctor.photoDoctor) }}"
                                                                             width="500" height="300" id="large-img-7">
                                                                    </center>
                                                                </div>

                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default arabe"
                                                                            data-dismiss="modal"> رجوع
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong>المستخدم </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">
                                                {{ appointment.user.name }}
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong>رقم تواصل المستخدم </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">
                                                {{ appointment.user.phoneNumber }}
                                            </div>
                                        </div>
                                    </li>


                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong class="arabe"> صورة المستخدم</strong>
                                            </div>
                                            <div class="col-lg-10">
                                                <div class="row">


                                                    <div class="col-lg-3">
                                                        <a href="#" id="show-{{ appointment.user.id }}" data-toggle="modal"
                                                           data-target="#show-modal-{{ appointment.user.id }}">

                                                            <img src="{{ asset('uploads/users/'~appointment.user.photo) }}"
                                                                 width="180" height="150" id="small-img-{{ appointment.user.id }}" class="thumbnail">

                                                        </a>

                                                    </div>


                                                    <div class="modal fade" id="show-modal-{{ appointment.user.id }}" tabindex="-1"
                                                         role="dialog" aria-labelledby="myModalLabel"
                                                         aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">

                                                                <div class="modal-header">
                                                                    <button type="button" class="close"
                                                                            data-dismiss="modal" aria-hidden="true">
                                                                        &times;
                                                                    </button>
                                                                    <h4 class="modal-title arabe" id="myModalLabel"> اظهار
                                                                        الصورة</h4>
                                                                </div>

                                                                <div class="modal-body">
                                                                    <center>
                                                                        <img src="{{ asset('uploads/users/'~appointment.user.photo) }}"
                                                                             width="500" height="300" id="large-img-{{ appointment.user.id }}">
                                                                    </center>
                                                                </div>

                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default arabe"
                                                                            data-dismiss="modal"> رجوع
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-lg-2 arabe">
                                                <strong>تاريخ طلب الموعد  </strong>
                                            </div>
                                            <div class="col-lg-4 arabe">
                                                {{ appointment.createdAtAppointment|date('d/m/Y') }}
                                            </div>
                                        </div>
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page-wrapper -->
{% endblock %}
